// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Word {
  id          Int           @id @default(autoincrement())
  swissGerman String
  german      String
  spellings   String[]
  meanings    String[]
  examples    String[]
  history     WordHistory[]
  updatedAt   DateTime      @updatedAt
}

model WordHistory {
  id              Int      @id @default(autoincrement())
  wordId          Int
  word            Word     @relation(fields: [wordId], references: [id])
  swissGerman     String
  german          String
  spellings       String[]
  meanings        String[]
  examples        String[]
  createdAt       DateTime @default(now())
  createdByUserId Int      @map("updatedByUserId")
  createdBy       User     @relation(fields: [createdByUserId], references: [id])
}

model User {
  id           Int           @id @default(autoincrement())
  username     String
  email        String
  password     String
  createdWords WordHistory[]
}
